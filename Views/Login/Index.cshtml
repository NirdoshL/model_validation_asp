@model LoginModel;
@{
    ViewData["Title"]="User/Login";
}

@using (Html.BeginForm()){
    @Html.AntiForgeryToken()
    <h1>Login to database</h1>

    <div class="UserName mx-1 my-1">
     <label asp-for="UserName"></label>
     <input asp-for="UserName"/>
     <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="Email mx-1 my-1">
     <label asp-for="Email"></label>
     <input asp-for="Email"/>
     <span  asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="Password mx-1 my-1">
     <label asp-for="Password"></label>
     <input asp-for="Password"/>
     <span  asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div>
     <button class="button bg-success border-transparent" type="submit"> Login </button>
    </div>



}



